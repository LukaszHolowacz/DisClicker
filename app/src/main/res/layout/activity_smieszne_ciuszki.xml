<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/disclicker_bg">

    <ImageView
        android:id="@+id/powrot_smieszneciuszki"
        android:layout_width="150px"
        android:layout_height="150px"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.954"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.023"
        app:srcCompat="@drawable/powrot" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Główna"
        android:textColor="#FFFFFF"
        android:textSize="34sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.7"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.023" />

    <RadioGroup
        android:layout_width="405dp"
        android:layout_height="500dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RadioButton
            android:id="@+id/shyvana_rbutton"
            android:layout_width="405dp"
            android:layout_height="100dp"
            android:button="?android:attr/listChoiceIndicatorSingle"
            android:buttonTint="#80FFFFFF"
            android:enabled="false"
            android:text="Wykonaj Genka na Shyvanie.\nZ każdym kliknięciem zdobywasz +1 DisPointsów"
            android:textColor="#80FFFFFF"
            android:textSize="20sp" />

        <RadioButton
            android:id="@+id/karthus_rbutton"
            android:layout_width="405dp"
            android:layout_height="100dp"
            android:button="?android:attr/listChoiceIndicatorSingle"
            android:buttonTint="#80FFFFFF"
            android:text="Zadzwoń do karthusa.\nZ każdym kliknięciem zdobywasz +2 DisPointsów"
            android:textColor="#80FFFFFF"
            android:textSize="20sp" />

        <RadioButton
            android:id="@+id/grecja_rbutton"
            android:layout_width="405dp"
            android:layout_height="100dp"
            android:button="?android:attr/listChoiceIndicatorSingle"
            android:buttonTint="#80FFFFFF"
            android:text="@string/grecja_text"
            android:textColor="#80FFFFFF"
            android:textSize="20sp" />

        <RadioButton
            android:id="@+id/radioButton2"
            android:layout_width="405dp"
            android:layout_height="100dp"
            android:button="?android:attr/listChoiceIndicatorSingle"
            android:buttonTint="#80FFFFFF"
            android:text="RadioButton"
            android:textColor="#80FFFFFF" />

        <RadioButton
            android:id="@+id/radioButton3"
            android:layout_width="405dp"
            android:layout_height="100dp"
            android:button="?android:attr/listChoiceIndicatorSingle"
            android:buttonTint="#80FFFFFF"
            android:text=""
            android:textColor="#80FFFFFF" />
    </RadioGroup>

</androidx.constraintlayout.widget.ConstraintLayout>